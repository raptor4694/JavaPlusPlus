package com.test;

from java++ import expressions.class_creator;

from java.util import ArrayList, HashMap, HashSet;

public class TestClassCreatorExpression {	
	public static void main(String[] args) {
		ArrayList<String> strings = new ArrayList<String> {"a", "b", "c", "d"};
		HashMap<String, Integer> numbers = new HashMap<> {"one": 1, "two": 2, "three": 3};
		HashSet<Float> floats = new HashSet<Float> {0.2f, 1.9f, -3.2f};
		
		var objects = new ArrayList<Object>;
		objects.add(strings);
		objects.add(numbers);
		
		println join(", ", objects);
	}
	
	static String join(String separator, Collection<?> objects) {
		var sb = new StringBuilder;
		boolean first = true;
		for(var obj : objects) {
			if(first)
				first = false;
			else
				sb.append(separator);
			sb.append(obj);
		}
		return sb.toString();
	}
}
